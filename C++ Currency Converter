#include <iostream>
using namespace std;

int main() {
    
    double value;
    double result;
    cout<<"Hello! Welcome to C++ Currency Converter: Euro to IDR Version!"<< endl;
    cout<<"Please enter value in Euro:";
    cin>>value;
    
    result= value*15000;
    
    cout<<"This value in IDR is:"<<result<<endl;
    cout<<"Thank you for using this converter!";
    
    return 0;
}
